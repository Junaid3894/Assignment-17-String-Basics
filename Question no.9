/*9. Write a C program to sort a string array in ascending order.*/

#include<stdio.h>
int main()
{
char str[20];
char temp;
int count=-1;
printf("Enter the string :");
fgets(str,20,stdin);
// counting the characters in a given string
for(int i=0;str[i];i++){
    count++;
}
for(int i=0;i<count;i++){
   for(int j=i+1;j<count;j++){
      if(str[i]>str[j]){
          temp=str[i];
          str[i]=str[j];
          str[j]=temp;
      }
   }
}
for(int i=0;i<count;i++){
   printf("%c",str[i]);
}

return 0;
}
