/*7. Write a program in C to count the total number of alphabets, digits and special
characters in a string.*/

#include<stdio.h>
int main()
{
char str[20];
int count_alp=0;
int count_digits=0;
int count_special=-1;
printf("Enter the string :");
fgets(str,20,stdin);
for(int i=0;str[i];i++){
   if(str[i]>='a' && str[i]<='z' || str[i]>='A' && str[i]<='Z' ){
       count_alp++;
   }
   else if(str[i]>=48 && str[i]<=57){
      count_digits++;
   }
   else{
      count_special++;
   }
}
printf("Your total alphabets is %d\n",count_alp);
printf("Your total digits is %d\n",count_digits);
printf("Your total special is %d",count_special);
return 0;
}
