/*2. Write a program to count the occurrence of a given character in a given string.*/

#include<stdio.h>
int main()
{
char str[20];
char occ;
int count=0;
printf("Enter the string :");
fgets(str,20,stdin);
printf("Enter the character which you want find the occurrence in a given string :");
scanf("%c",&occ);
for(int i=0;str[i];i++){
    if(str[i]==occ){
        count++;
    }
}
printf("Your total occurrence of %c is %d",occ,count);
return 0;
}
